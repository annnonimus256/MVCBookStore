@model IEnumerable<BookStore.EntityFramework.Book>

@{
    ViewBag.Title = "Book";
}

<h2>Book</h2>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Add book", "newBook", "Account")
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            <b>Author</b>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            <b>Seller</b>
        </th>
        <th></th>

    </tr>
    @foreach (BookStore.EntityFramework.Book b in Model)
    {
    <tr>
        <td><p>@b.Name</p></td>
        <td><p>@b.Autor</p></td>
        <td><p>@b.Price</p></td>
        <td><p>@b.User.Name</p></td>
        <td><p>@Html.ActionLink("Подробнее", "Book", new { id = b.Id })</p></td>
